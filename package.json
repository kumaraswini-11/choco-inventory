{
  "name": "choco-inventory",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "type-check": "tsc --noEmit",
    "validate": "npm run format:fix && npm run lint && npm run type-check && npm run build",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:push": "npx drizzle-kit push --config=drizzle.config.ts",
    "db:migrate": "node --env-file=.env -r esbuild-register ./src/db/migrate.ts",
    "drizzle:studio": "npx drizzle-kit studio --config=drizzle.config.ts"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.34.1",
    "lucide-react": "^0.452.0",
    "next": "14.2.15",
    "postgres": "^3.4.4",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.5.3",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "drizzle-kit": "^0.25.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-check-file": "^2.8.0",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
